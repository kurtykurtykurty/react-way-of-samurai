{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["plugin:react/recommended", "airbnb", "react-app"],
    // "extends": ["react-app", "react-app"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],

    "rules": {
        "indent": "off",
        "react/jsx-indent": "off",
        "react/jsx-indent-props": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "react/prop-types": [0],
        "react/destructuring-assignment": [1],
        "react/button-has-type": [0],
        "react/jsx-props-no-spreading": [1],
        "no-debugger": [1],
        "no-console": [0],
        "no-nested-ternary": [1],
        "no-shadow": [1],
        "arrow-body-style": [0],
        "prefer-const": [1]
    }
}
